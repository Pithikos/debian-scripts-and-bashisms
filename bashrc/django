_django_shell='shell_plus'


_upfind_file(){
	_dir=`pwd`
	while [[ "$_dir" != "/" ]] ; do
		guess_path="$_dir"/"$1"
		if [[ -f "$guess_path" ]]; then
			echo "$guess_path"
			return 0
		fi
		_dir=`dirname "$_dir"`
	done
	return 1
}


shell() {
	managepy=`_upfind_file manage.py`
	if [[ "$managepy" ]]; then
		python "$managepy" "$_django_shell"
	else
		echo "No manage.py file found"
	fi
}
